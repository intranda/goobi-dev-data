<?xml version="1.0"?>
<fop version="1.0">
	<renderers>
		<renderer mime="application/pdf">
			<fonts>
				<font kerning="yes" embed-url="font_OpenSans-Regular.ttf" embedding-mode="full">
					<font-triplet name="opensans" style="normal" weight="normal" />
				</font>
				<font kerning="yes" embed-url="font_OpenSans-Semibold.ttf" embedding-mode="full">
					<font-triplet name="opensans" style="normal" weight="bold" />
				</font>
				<font kerning="yes" embed-url="font_OpenSansHebrew-Regular.ttf" embedding-mode="full">
					<font-triplet name="unicode" style="normal" weight="normal" />
				</font>
				<font kerning="yes" embed-url="font_OpenSansHebrew-Bold.ttf" embedding-mode="full">
					<font-triplet name="unicode" style="normal" weight="bold" />
				</font>
			</fonts>
		</renderer>
	</renderers>
</fop>
